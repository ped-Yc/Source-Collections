{
  // editor
  "editor.fontFamily": "Hack,Sarasa Mono SC",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.renderWhitespace": "none",
  "editor.wordWrap": "bounded",
  "editor.autoIndent": "advanced",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": null,
  "editor.renderIndentGuides": true,
  // terminal
  "terminal.integrated.fontFamily": "Sarasa Mono SC",
  // workbench
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Horizon Italic",
  "workbench.colorCustomizations": {
    // "editor.selectionBackground": "#806767",
    "editor.selectionBackground": "#8d3042"
  },
  // ESLINT
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html",
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  "eslint.options": {
    "plugins": ["html"]
  },
  // TODO-TREE
  "todo-tree.regex.regexCaseSensitive": false,
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "white"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "white",
      "background": "Orange",
      "icon": "checklist",
      "rulerColour": "Orange",
      "type": "tag",
      "iconColour": "Orange"
    },
    "FIXME": {
      "background": "red",
      "icon": "beaker",
      "rulerColour": "red",
      "iconColour": "red",
      "opacity": 50
    },
    "TAG": {
      "background": "Magenta",
      "icon": "pin",
      "rulerColour": "Magenta",
      "iconColour": "Magenta",
      "rulerLane": "full",
      "opacity": 50
    },
    "DONE": {
      "background": "DarkTurquoise",
      "icon": "verified",
      "rulerColour": "DarkTurquoise",
      "iconColour": "DarkTurquoise",
      "opacity": 50
    },
    "BUG": {
      "background": "green",
      "icon": "bug",
      "rulerColour": "green",
      "iconColour": "green",
      "opacity": 50
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[css]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "git.confirmSync": false,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "[sass]": {
    "editor.defaultFormatter": "sasa.vscode-sass-format"
  },
  "prettier.configPath": "C:\\Users\\Administrator\\Documents\\Workspace\\GitHub\\ResourceCollection\\ConfigurationFiles\\.prettier.js",
  "prettier.jsxBracketSameLine": true
  // LANGUAGES
}
