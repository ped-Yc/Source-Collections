{
    // editor
    "editor.fontFamily": "Hack,Sarasa Mono SC",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.renderWhitespace": "none",
    "editor.wordWrap": "bounded",
    "editor.autoIndent": "advanced",
    "editor.tabSize": 2,
    "editor.tokenColorCustomizations": null,
    "editor.renderIndentGuides": true,
    // terminal
    "terminal.integrated.fontFamily": "Sarasa Mono SC",
    // workbench
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Horizon Italic",
    "workbench.colorCustomizations": {
        // "editor.selectionBackground": "#806767",
        "editor.selectionBackground": "#8d3042",
    },
    // ESLINT
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "eslint.options": {
        "plugins": [
            "html"
        ]
    },
    // TODO-TREE
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "text",
        "foreground": "red",
        "background": "white",
        "opacity": 50,
        "iconColour": "blue"
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check",
            "type": "line"
        },
        "FIXME": {
            "foreground": "black",
            "iconColour": "yellow",
            "gutterIcon": true
        }
    },
    "[javascript]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[html]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[json]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[css]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "git.confirmSync": false,
    // LANGUAGES
}